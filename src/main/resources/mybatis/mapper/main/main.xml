<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="test.arthall.main.map.MainMap">

    <!-- 공연 정보 가져오기 -->
    <select id="getPlayList" parameterType="test.arthall.main.model.MainDao" resultType="test.arthall.main.model.MainDao">
        SELECT
                  NO
                , hallName
                , playType
                , playNo
                , playSubType
                , playName
                , frDttm
                , toDttm
                , starring
                , content
                , rating
                , runningTime
                , inquiry
                , producer
                , filename
        FROM    play
    </select>

    <!-- 파일 조회 -->
    <select id="getFileContext" parameterType="test.arthall.main.model.MainDao" resultType="test.arthall.main.model.MainDao">
        SELECT
                SEQ
                , FILE_NAME
        FROM fileupload
        <if test='seq != null and seq != ""'>
            WHERE SEQ = #{seq}
        </if>
    </select>

    <!-- 파일 insert -->
    <insert id="setFileContext" parameterType="test.arthall.main.model.MainDao">
        INSERT INTO fileupload(
            FILE_NAME
        )   VALUES (
            #{fileName}
        )
    </insert>
</mapper>